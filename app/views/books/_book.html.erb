<div id="<%= dom_id book %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Title:</strong>
    <%= book.title %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Author:</strong>
    <%= book.author %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Isbn:</strong>
    <%= book.isbn %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Description:</strong>
    <%= book.description %>
  </p>

  <div>
    <%= link_to "Show this book", book_path(book), class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium" %>
    <%= link_to "Edit this book", edit_book_path(book), class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this book", book_path(book), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-blue-600 text-white font-medium" %>
    </div>
  </div>
</div>

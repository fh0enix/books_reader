<div id="<%= dom_id book %>">
  <p class="my-5">
    <strong class="block mb-1 text-2xl font-extrabold h-0.5"><%= book.title %></strong>
  </p>

  <p class="my-5">
    <strong class="block mb-1 text-xl text-yellow-800"><%= book.author %></strong>
  </p>

  <p class="my-5">
    <strong class="inline-flex mb-1 font-bold text-white rounded-tl rounded-tr rounded-bl rounded-br bg-slate-400">ISBN:<%= book.isbn %></strong>
  </p>

  <p class="my-5">
    <strong class="block mb-1 text-2xl font-semibold text-slate-600"><%= book.description %></strong>
  </p>

  <div>
    <%= link_to "Show this book", book_path(book), class: "btn-green" %>
    <%= link_to "Edit this book", edit_book_path(book), class: "btn-amber" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this book", book_path(book), method: :delete, class: "btn-red" %>
    </div>
  </div>
</div>

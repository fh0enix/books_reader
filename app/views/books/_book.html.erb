
  <div id="<%= dom_id book %>" class="flex flex-col flex-[1_0_0%] bg-white dark:bg-gray-800 rounded-bl-3xl rounded-br-3xl rounded-tr-3xl rounded-tl-3xl">
    <div class="flex-1 p-4 md:p-5">
      <h3 class="text-3xl font-bold text-gray-800 dark:text-white">
        <%= book.title %>
      </h3>
      <h3 class="text-lg italic font-light text-gray-800 dark:text-white overline">
        <%= book.author %>
      </h3>
      <p class="mt-1 text-gray-800 dark:text-gray-400">
        <%= book.description %>
      </p>
      <p class="text-xs text-gray-500 dark:text-gray-500 overline">
        ISBN:<%= book.isbn %>
      </p>
    </div>
    <div class="p-4 border-t sm:px-5 dark:border-gray-700">
    <div class="inline-flex rounded-md shadow-sm">
      <%= link_to "SHOW", book_path(book), class:"btn-green" %>
      <%= link_to "EDIT", edit_book_path(book), class:"btn-amber" %>
      <%= button_to "DELETE", book_path(book), method: :delete, class:"btn-red" %>
    </div>
    </div>
  </div >

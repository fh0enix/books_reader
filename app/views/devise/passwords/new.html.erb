<div class="flex items-center justify-center m-10 mt-12 text-center dark:bg-gray-800 dark:text-gray-100 rounded-3xl">
	<div class="flex flex-col w-full max-w-lg p-12 rounded shadow-lg dark:text-gray-400">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="my-5">
        <%= f.input :email,
                    label: false,
                    placeholder: "email",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="my-5">
        <%= f.button :submit, "Send me reset password instructions", class:"btn-green" %>
      </div>
    <% end %>
	</div>
</div>

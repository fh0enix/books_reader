<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :put }, defaults: { input_html: { class: "form" } }) do |f| %>
  <div class="my-5">
    <%= f.input :email,
                label: false,
                hint: "EMAIL ",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                label: false,
                hint: "PASSWORD ",
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me,
                label: false,
                hint: "REMEMBER ME ",
                as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="my-5">
    <%= f.button :submit, "Log in", class: "btn-green" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<div class="inline-flex rounded-md shadow-sm">
  <%= link_to "BACK TO BOOKS", books_path, class: "btn-green" %>
</div

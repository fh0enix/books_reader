<header class="p-4 dark:bg-gray-800 dark:text-gray-100 rounded-b-2xl">
	<div class="container flex justify-between h-16 mx-auto">
		<ul class="items-stretch hidden lg:flex">
			<li class="flex">
				<a><%= link_to "UPLOAD NEW BOOK", new_book_path, class: "flex items-center px-4 -mb-1 border-b-2 dark:border-transparent dark:text-cyan-400 dark:border-cyan-400" %></a>
			</li>
		</ul>
		<a rel="noopener noreferrer" href="/books" aria-label="Back to homepage" class="flex items-center p-2 duration-75 delay-1000 animate-pulse">
			<%= inline_svg(INLINE_SVG1) %>
		</a>
		<div class="items-center flex-shrink-0 hidden lg:flex">
			<% if current_user %>
				<div class="self-center px-8 py-3 rounded">
					<%="Hello #{current_user.first_name}!"%>
				</div>
				<%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "self-center px-8 py-3 font-semibold rounded dark:bg-amber-400 dark:text-gray-900" %>
			<% else %>
				<%= link_to "Sign in", user_session_path, class: "self-center px-8 py-3 rounded" %>
				<%= link_to "Sign Up", new_user_registration_path, class: "self-center px-8 py-3 font-semibold rounded dark:bg-cyan-400 dark:text-gray-900" %>
			<% end %>
		</div>
		<button class="p-4 lg:hidden">
			<%= inline_svg(INLINE_SVG2) %>
		</button>
	</div>
</header>

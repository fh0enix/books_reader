<div class="relative">
  <form method="get" action="<%= books_path %>" class="flex items-center">
    <span class="absolute inset-y-0 left-0 flex items-center pl-2">
      <button type="submit" title="Search" class="p-1 focus:outline-none focus:ring">
        <%= inline_svg "search.svg", class: "w-4 h-4 dark:text-gray-100" %>
      </button>
    </span>
    <input type="search" name="query" placeholder="Search Author or Title..." class="w-32 py-2 pl-10 text-sm rounded-md sm:w-auto focus:outline-none dark:bg-gray-800 dark:text-gray-100 focus:dark:bg-gray-900">
  </form>
</div>
